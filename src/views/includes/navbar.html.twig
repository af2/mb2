    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span
          </a>
          <a class="brand" href="/" {% if logo != false %}style="background:url(../img/{{ logo }}) no-repeat 10px 8px;height:25px;width:130px;"{% endif %}>{% if logo == false %}{{ sitename }}{% endif %}</a>
          <div class="nav-collapse">
            <ul class="nav">
              {% set path = '/' %}
              <li{% if uri[1] == '' %} class="active"{% endif %}><a href="/">Home</a></li>
              {% for href,link in navlinks %}
                {% if is_array(link) %}
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        {{ link._index }}
                        <b class="caret"></b>
                      </a>
                    
                      <ul class="dropdown-menu">
                    {% for subhref,sublink in link %}
                      {% if not loop.first %}
                        <li><a href="/{{ subhref }}/">{{ sublink }}</a></li>
                      {% endif %}
                    {% endfor %}
                      </ul>
                    </li>
                {% else %}
                  <li{% if uri[1] == href %} class="active"{% endif %}><a href="/{{ href }}/">{{ link }}</a></li>
                {% endif %}
              {% endfor %}
            </ul>
            <ul class="nav pull-right">
              {% for link,href in sociallinks %}
                <li><a href="{{ href }}">{{ link }}</a></li>
              {% endfor %}
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
